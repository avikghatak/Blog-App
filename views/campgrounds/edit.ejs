<%- include("../partials/header")%>

<div class="container">
    <div class="row">
        <!--HEADING-->
        <h1 style="text-align: center;">
            EDIT <%= campground.name %>
        </h1>
        <!--FORM-->
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input  class="form-control" type="text" value="<%= campground.name %>" name="campground[name]" />
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= campground.image %>" name="campground[image]" />
                </div>
				<div>
					<input class="form-control" type="text" value="<%= campground.desc %>" name="campground[desc]" />
				</div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-primary">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>

